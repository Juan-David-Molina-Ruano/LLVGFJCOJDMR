@model LLVGFJCOJDMR.Models.Rol

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="card">
        <div class="card-header">
            <h4 class="card-text col-md-12">Detalles de Rol</h4>
            </div>
            <div class="card-body row">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>
                <div class="col-md-6" style="margin-top:10px;">
                    <a class="btn btn-primary" style="width:100%;" asp-action="Editar" asp-route-id="@Model?.Id">Editar</a>
                </div>
                <div class="col-md-6" style="margin-top:10px;">
                    <a class="btn btn-secondary" style="width:100%;" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </div>
    </div>

