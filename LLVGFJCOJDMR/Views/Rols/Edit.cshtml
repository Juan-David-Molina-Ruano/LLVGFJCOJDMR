@model LLVGFJCOJDMR.Models.Rol

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="row">
        <form asp-action="Edit" class="card">
            <div class="card-header">
                <h1 class="card-text col-md-12">Editar Rol</h1>
            </div>
            <div class="card-body row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <input asp-for="Name" type="hidden" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6" style="margin-top:10px;">
                <input style="width:100%;" type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <div class="col-md-6" style="margin-top:10px;">
                <a class="btn btn-secondary" style="width:100%;" asp-action="Index">Cancelar</a>
            </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
